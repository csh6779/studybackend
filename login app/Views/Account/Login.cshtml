<h2>로그인</h2>
<form asp-action="Login" method="post">
    <div>
        <label>아이디</label>
        <input type="text" name="ID" required />
    </div>
    <div>
        <label>비밀번호</label>
        <input type="password" name="password" required />
    </div>
    <button type="submit">로그인</button>
    <a href="/Account/Register" class="btn btn-primary">회원가입</a>
    <p>@ViewBag.Message</p>
</form>
